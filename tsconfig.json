{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    "moduleResolution": "bundler",

    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./app/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "index.js"
  ]
}
